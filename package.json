{
  "name": "lexichain",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd packages/database && npm run db:generate",
    "db:push": "cd packages/database && npm run db:push",
    "db:migrate": "cd packages/database && npm run db:migrate",
    "db:studio": "cd packages/database && npm run db:studio",
    "db:seed": "cd packages/database && npm run db:seed",
    "db:reset": "cd packages/database && npm run db:push -- --force-reset && npm run db:seed"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@prisma/client": "^6.18.0"
  }
}
